form
  input(ng-model="xcoord", type="text", placeholder="X")
  input(ng-model="ycoord", type="text", placeholder="Y")
  input(ng-model="comment", type="text", placeholder="Comment")
  button(ng-click="submit()") Submit
table
  thead
    th Date
    th X
    th Y
    th Comments
  tbody
    tr(ng-repeat="loot in loots")
      input(type='hidden', value="{{loot._id}}")
      td {{loot.loot.date}}
      td {{loot.loot.xcoord}}
      td {{loot.loot.ycoord}}
      td {{loot.loot.comment}}
      td
        button(ng-click="edit(loot)", type="button", ng-hide="loot.edit") Edit
        button(ng-click="submitEdited(loot)", type="button", ng-hide="loot.submit") Submit
        button(ng-click="cancel(loot)", type="button", ng-hide="loot.cancel") Cancel 
        button(ng-click="delete(loot)", type="button", ng-hide="loot.delete") Delete